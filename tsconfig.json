{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",
        "outDir": "./lib/",
        "rootDir": "./src/",

        "experimentalDecorators": true,
        "strict": true,
        "esModuleInterop": true,  
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include" : [ "src/**/*" ],
    "exclude" : [ "lib", "test" ]
}
  
