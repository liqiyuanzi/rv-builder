{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 14",
    "compilerOptions": {
        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2020",

        "outDir": "./dist_test/",
        "rootDir": ".",

        "strict": true,
        "esModuleInterop": true,  
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true
    },
    "include" : [ "./test/**/*" ],
    "exclude" : [ "src", "lib", "demo", "./test/type/**/*" ]
}
  
